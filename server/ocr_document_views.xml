<odoo>
  <record id="action_ocr_document" model="ir.actions.act_window">
    <field name="name">OCR Documents</field>
    <field name="res_model">ocr.document</field>
    <field name="view_mode">tree,form</field>
  </record>

  <menuitem id="menu_ocr_root" name="OCR"/>
  <menuitem id="menu_ocr_documents" name="Documents" parent="menu_ocr_root" action="action_ocr_document"/>

  <record id="view_ocr_document_tree" model="ir.ui.view">
    <field name="name">ocr.document.tree</field>
    <field name="model">ocr.document</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="filename"/>
        <field name="state"/>
      </tree>
    </field>
  </record>

  <record id="view_ocr_document_form" model="ir.ui.view">
    <field name="name">ocr.document.form</field>
    <field name="model">ocr.document</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name"/>
            <field name="file" filename="filename"/>
            <field name="filename"/>
            <field name="language"/>
            <field name="state" readonly="1"/>
          </group>
          <group>
            <button name="action_run_ocr" type="object" string="Extract Text" class="btn-primary"/>
          </group>

          <notebook>
            <page string="Extracted Lines">
              <field name="line_ids">
                <tree editable="bottom">
                  <field name="sequence"/>
                  <field name="content"/>
                </tree>
              </field>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>
</odoo>
